@model VerConsultaViewModel
@{

    Layout = "~/Views/Shared/_pdf.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Consulta Médica</title>

</head>
<body>
    <style>
        /* styles.css */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            width: 97%;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .page {
            margin-bottom: 40px;
        }

        .consulta-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            table-layout: fixed;
        }

            .consulta-table th,
            .consulta-table td {
                border: 1px solid #ddd;
                padding: 5px;
                text-align: left;
                word-wrap: break-word;
                font-size: 11px;
            }

        /* Estilos específicos para cada tabla */
        #table-establecimiento th {
            background-color: #ccffcc;
            color: #333;
            font-weight: bold;
            text-align: center;
        }

        th#establecimiento {
            font-size: 12px;
        }

        #table-motivo th {
            background-color: #ccccff;
            color: #333;
            font-weight: bold;
            text-align: left;
            font-size: 15px;
        }

        #table-antecedentes .table-header-multi {
            background-color: #ccccff;
            color: #333;
            font-weight: bold;
            text-align: left;
            font-size: 15px;
        }

        #table-antecedentes .table-header-multi-right {
            background-color: #ccccff;
            color: #333;
            font-weight: bold;
            text-align: right;
            font-size: 5px;
        }

        /* Estilos para la nueva tabla */
        #table-antecedentes-familiares th {
            background-color: #d9e1f2;
            color: #333;
            font-weight: bold;
            text-align: left;
            font-size: 15px;
        }

        #table-antecedentes-familiares .highlight {
            background-color: #ffff99;
        }

        #table-antecedentes-familiares td {
            background-color: #fff;
        }

        #table-antecedentes-familiares tbody tr:nth-child(even) td {
            background-color: #f9f9f9;
        }

        #table-antecedentes-familiares tbody tr:nth-child(odd) td {
            background-color: #fff;
        }

        /* Ejemplo de estilos individuales */
        th#cardiopatia, #cardiopatia-value {
            background-color: #ccffcc;
            font-size: 5px;
            text-align: center;
            height: 5%;
        }

        th#diabetes, #diabetes-value {
            background-color: #ccffcc;
            font-size: 5px;
            text-align: center;
            height: 5%;
        }

        th#enf-vascular, #enf-vascular-value {
            background-color: #ccffcc;
            font-size: 5px;
            text-align: center;
            height: 5%;
        }

        th#hipertension, #hipertension-value {
            background-color: #ccffcc;
            font-size: 5px;
            text-align: center;
            height: 5%;
        }

        th#cancer, #cancer-value {
            background-color: #ccffcc;
            font-size: 5px;
            text-align: center;
            height: 5%;
        }

        th#tuberculosis, #tuberculosis-value {
            background-color: #ccffcc;
            font-size: 5px;
            text-align: center;
            height: 5%;
        }

        th#enf-mental, #enf-mental-value {
            background-color: #ccffcc;
            font-size: 5px;
            text-align: center;
            height: 5%;
        }

        th#enf-infecciosa, #enf-infecciosa-value {
            background-color: #ccffcc;
            font-size: 5px;
            text-align: center;
            height: 5%;
        }

        th#malformacion, #malformacion-value {
            background-color: #ccffcc;
            font-size: 5px;
            text-align: center;
            height: 5%;
        }

        th#otro, #otro-value {
            background-color: #ccffcc;
            font-size: 5px;
            text-align: center;
            height: 5%;
        }

        .consulta-table td {
            background-color: #fff;
        }

        .consulta-table tbody tr:nth-child(even) td {
            background-color: #f9f9f9;
        }

        .consulta-table tbody tr:nth-child(odd) td {
            background-color: #fff;
        }
    </style>
    <div class="container">
        <div class="page">
            <table id="table-establecimiento" class="consulta-table">
                <thead>
                    <tr>
                        <th id="establecimientos">ESTABLECIMIENTO</th>
                        <th id="nombre">NOMBRE</th>
                        <th id="apellido">APELLIDO</th>
                        <th id="sexo">SEXO</th>
                        <th id="edad">EDAD</th>
                        <th id="numeroH">Nº HISTORIA CLÍNICA</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Expermed</td>
