<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .consulta {
            max-width: 1000px;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            border: 1px solid #ddd;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .header-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .header-table td {
                border: 1px solid #000;
                padding: 8px;
                text-align: center;
                background-color: #e0f7e0;
            }

        section {
            margin-bottom: 20px;
        }

            section h2 {
                font-size: 18px;
                margin-bottom: 10px;
                background-color: #c0c0ff;
                padding: 5px;
                border: 1px solid #000;
                text-align: left;
            }

            section .subheading {
                font-size: 10px;
                background-color: #f4f4f4;
                padding: 5px;
                margin-bottom: 10px;
                border: 1px solid #000;
            }

            section p {
                border: 1px solid #000;
                padding: 8px;
                background-color: #f9f9f9;
                margin: 0;
                margin-bottom: 10px;
            }

            section table {
                width: 100%;
                border-collapse: collapse;
                margin-bottom: 20px;
            }

            section table, section th, section td {
                border: 1px solid #000;
                padding: 8px;
                text-align: center;
            }

            section th {
                background-color: #c0c0ff;
            }

            section td:nth-child(odd) {
                background-color: #ffffcc;
            }

            section td:nth-child(even) {
                background-color: #e0f7e0;
            }

        .familiares td {
            background-color: #ffffcc;
        }

        .signos td {
            background-color: #e0f7e0;
        }

        footer {
            text-align: center;
            font-size: 12px;
            color: #666;
            margin-top: 20px;
        }

    </style>
    <div>
        @RenderBody()
    </div>
</body>
</html>
