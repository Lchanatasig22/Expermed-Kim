@model VerConsultaViewModel
@{
    ViewData["Title"] = "GeneratePdf";
    Layout = "~/Views/Shared/_pdf.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Documento de Consulta</title>
    <style>
        body { font-family: Arial, sans-serif; }
        table { width: 100%; border-collapse: collapse; }
        th, td { border: 1px solid black; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
    </style>
</head>
<body>
    <h1>Consulta Médica</h1>
    <h2>Datos del Paciente</h2>
    <table>
        <tr>
            <th>Nombre</th>
            <td>@Model.PacienteNombre</td>
        </tr>
        <tr>
            <th>Apellido</th>
            <td>@Model.PacienteApellido</td>
        </tr>
        <tr>
            <th>Segundo Apellido</th>
            <td>@Model.PacienteSegundoApellido</td>
        </tr>
        <tr>
            <th>Segundo Nombre</th>
            <td>@Model.PacienteSegundoNombre</td>
        </tr>
        <tr>
            <th>Tipo de Documento</th>
            <td>@Model.TiposDocumentos</td>
        </tr>
        <tr>
            <th>Número de Documento</th>
            <td>@Model.NumeroDocumento</td>
        </tr>
        <tr>
            <th>Tipo de Sangre</th>
            <td>@Model.TiposSangre</td>
        </tr>
        <tr>
            <th>Es Donante</th>
            <td>@Model.TipoDonante</td>
        </tr>
        <tr>
            <th>Fecha de Nacimiento</th>
            <td>@Model.FechaNacimiento?.ToString("yyyy-MM-dd")</td>
        </tr>
        <tr>
            <th>Edad</th>
            <td>@Model.EdadPaciente</td>
        </tr>
        <tr>
            <th>Sexo</th>
            <td>@Model.TipoSexo</td>
        </tr>
        <tr>
            <th>Estado Civil</th>
            <td>@Model.TipoEstadoC</td>
        </tr>
        <tr>
            <th>Formación Profesional</th>
            <td>@Model.TipoFormacionP</td>
        </tr>
        <tr>
            <th>Nacionalidad</th>
            <td>@Model.TipoNacionalidadP</td>
        </tr>
        <tr>
            <th>Dirección</th>
            <td>@Model.DireccionPa</td>
        </tr>
        <tr>
            <th>Teléfono Fijo</th>
            <td>@Model.TelefonoFiPa</td>
        </tr>
        <tr>
            <th>Teléfono Celular</th>
            <td>@Model.TelefonoCePa</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.EmailPac</td>
        </tr>
        <tr>
            <th>Ocupación</th>
            <td>@Model.OcupaciónPac</td>
        </tr>
        <tr>
            <th>Empresa</th>
            <td>@Model.EmpresaPac</td>
        </tr>
        <tr>
            <th>Seguro de Salud</th>
            <td>@Model.SeguroSaludPa</td>
        </tr>
        <tr>
            <th>Historial de Consulta</th>
            <td>@Model.HistorialConsulta</td>
        </tr>
    </table>

    <h2>Datos de la Consulta</h2>
    <table>
        <tr>
            <th>Motivo de Consulta</th>
            <td>@Model.MotivoConsulta</td>
        </tr>
        <tr>
            <th>Diagnóstico</th>
            <td>@Model.DiagnosticoConsulta</td>
        </tr>
        <!-- Añade aquí más filas con los datos necesarios -->
    </table>

    <!-- Incluye más secciones si es necesario -->
</body>
</html>
