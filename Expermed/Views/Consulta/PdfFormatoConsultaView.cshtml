@model VerConsultaViewModel
@{

    Layout = "~/Views/Shared/_pdf.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Formato de Consulta</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .header, .footer {
            width: 100%;
            text-align: center;
            position: fixed;
        }

        .header {
            top: 0px;
        }

        .footer {
            bottom: 0px;
        }

        .content {
            margin-top: 150px;
            margin-bottom: 50px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .info {
            margin-bottom: 20px;
        }

            .info div {
                margin-bottom: 5px;
            }

            .info span {
                font-weight: bold;
            }
    </style>
</head>
<body>
    <div class="header">
        <h1>Formato de Consulta Médica</h1>
    </div>

    <div class="footer">
        <p>Emitido por: Dr. Kim Morales</p>
        <p>Especialista en Medicina general</p>
        <p>e-mail: helpdesk@asersoat.com</p>
        <p>Dirección: Av de la Prensa N49-180 y Juan Holguín Edifico Amafkar sexto piso, Chordeleg - Ecuador</p>
    </div>

    <div class="content">
        <div class="info">
            <div><span>Fecha:</span> @DateTime.Now.ToString("yyyy-MM-dd")</div>
            <div><span>Apellidos:</span> @Model.PacienteApellido</div>
            <div><span>Nombres:</span> @Model.PacienteNombre</div>
            <div><span>Edad:</span> @Model.EdadPaciente</div>
            <div><span>Diagnóstico:</span> @Model.DiagnosticoConsulta</div>
        </div>

        <h2>Datos del Paciente</h2>
        <table>
            <tr>
                <th>Nombre</th>
                <td>@Model.PacienteNombre</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>@Model.PacienteApellido</td>
            </tr>
            <tr>
                <th>Segundo Apellido</th>
                <td>@Model.PacienteSegundoApellido</td>
            </tr>
            <tr>
                <th>Segundo Nombre</th>
                <td>@Model.PacienteSegundoNombre</td>
            </tr>
            <tr>
                <th>Tipo de Documento</th>
                <td>@Model.TiposDocumentos</td>
            </tr>
            <tr>
                <th>Número de Documento</th>
                <td>@Model.NumeroDocumento</td>
            </tr>
            <tr>
                <th>Tipo de Sangre</th>
                <td>@Model.TiposSangre</td>
            </tr>
            <tr>
                <th>Es Donante</th>
                <td>@Model.TipoDonante</td>
            </tr>
            <tr>
                <th>Fecha de Nacimiento</th>
                <td>@Model.FechaNacimiento?.ToString("yyyy-MM-dd")</td>
            </tr>
            <tr>
                <th>Edad</th>
                <td>@Model.EdadPaciente</td>
            </tr>
            <tr>
                <th>Sexo</th>
                <td>@Model.TipoSexo</td>
            </tr>
            <tr>
                <th>Estado Civil</th>
                <td>@Model.TipoEstadoC</td>
            </tr>
            <tr>
                <th>Formación Profesional</th>
                <td>@Model.TipoFormacionP</td>
            </tr>
            <tr>
                <th>Nacionalidad</th>
                <td>@Model.TipoNacionalidadP</td>
            </tr>
            <tr>
                <th>Dirección</th>
                <td>@Model.DireccionPa</td>
            </tr>
            <tr>
                <th>Teléfono Fijo</th>
                <td>@Model.TelefonoFiPa</td>
            </tr>
            <tr>
                <th>Teléfono Celular</th>
                <td>@Model.TelefonoCePa</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.EmailPac</td>
            </tr>
            <tr>
                <th>Ocupación</th>
                <td>@Model.OcupaciónPac</td>
            </tr>
            <tr>
                <th>Empresa</th>
                <td>@Model.EmpresaPac</td>
            </tr>
            <tr>
                <th>Seguro de Salud</th>
                <td>@Model.SeguroSaludPa</td>
            </tr>
            <tr>
                <th>Historial de Consulta</th>
                <td>@Model.HistorialConsulta</td>
            </tr>
        </table>

        <h2>Signos Vitales</h2>
        <table>
            <tr>
                <th>Temperatura</th>
                <td>@Model.TemperaturaConsulta</td>
            </tr>
            <tr>
                <th>Frecuencia Respiratoria</th>
                <td>@Model.FrecuenciarespiratoriaConsulta</td>
            </tr>
            <tr>
                <th>Presión Arterial</th>
                <td>@Model.PresionarterialsistolicaConsulta/@Model.PresionarterialdiastolicaConsulta</td>
            </tr>
            <tr>
                <th>Pulso</th>
                <td>@Model.PulsoConsulta</td>
            </tr>
            <tr>
                <th>Peso</th>
                <td>@Model.PesoConsulta</td>
            </tr>
            <tr>
                <th>Talla</th>
                <td>@Model.TallaConsulta</td>
            </tr>
        </table>

        <h2>Diagnóstico</h2>
        <p>@Model.DiagnosticoConsulta</p>

        <h2>Plan de Tratamiento</h2>
        <p>@Model.PlantratamientoConsulta</p>
    </div>
</body>
</html>
