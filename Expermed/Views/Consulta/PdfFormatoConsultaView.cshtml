                </tbody>
            </table>

            <table id="table-antecedentes" class="consulta-table">
                <thead>
                    <tr>
                        <th colspan="4" class="table-header-multi">
                            2 ANTECEDENTES PERSONALES
                        </th>
                        <th colspan="2" class="table-header-multi-right">
                            DATOS CLÍNICO - QUIRÚRGICOS RELEVANTES Y GINECO OBSTÉTRICOS
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="6">Fiebre alta, ya se trató anteriormente</td>
                    </tr>
                    <tr>
                        <td colspan="6"></td>
                    </tr>
                    <tr>
                        <td colspan="6"></td>
                    </tr>
                    <tr>
                        <td colspan="6"></td>
                    </tr>
                    <tr>
                        <td colspan="6"></td>
                    </tr>
                </tbody>
            </table>

            <!-- Nueva tabla: 3 Antecedentes Familiares -->
            <!-- Nueva tabla: 3 Antecedentes Familiares -->
            <table id="table-antecedentes-familiares" class="consulta-table">
                <thead>
                    <tr>
                        <th colspan="20" class="table-header-multi">
                            3 ANTECEDENTES FAMILIARES
                        </th>
                    </tr>
                    <tr>
                        <th id="cardiopatia">1. CARDIOPATÍA
                        <td class="highlight" id="cardiopatia-value">X</td></th>
                        <th id="diabetes">2. DIABETES
                        <td id="diabetes-value"></td></th>
                        <th id="enf-vascular">3. ENF. C. VASCULAR
                        <td id="enf-vascular-value"></td></th>
                        <th id="hipertension">4. HIPERTENSIÓN
                        <td id="hipertension-value"></td></th>
                        <th id="cancer">5. CÁNCER
                        <td id="cancer-value"></td> </th>
                        <th id="tuberculosis">6. TUBERCULOSIS
                        <td id="tuberculosis-value"></td></th>
                        <th id="enf-mental">7. ENF. MENTAL
                        <td id="enf-mental-value"></td></th>
                        <th id="enf-infecciosa">8. ENF. INFECCIOSA
                        <td id="enf-infecciosa-value"></td></th>
                        <th id="malformacion">9. MALFORMACIÓN
                        <td id="malformacion-value"></td> </th>
                        <th id="otro">10. OTRO
                        <td id="otro-value"></td></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="20" id="comentarios">no se</td>
                    </tr>
                </tbody>
            </table>
            <!-- Resto del contenido del PDF -->
        </div>
    </div>
    <script src="script.js"></script>
</body>
</html>

