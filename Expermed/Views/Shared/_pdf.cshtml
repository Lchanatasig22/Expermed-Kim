<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            color: #333;
        }

        h2 {
            color: #2c3e50;
            border-bottom: 2px solid #2980b9;
            padding-bottom: 10px;
        }

        .container {
            margin-top: 30px;
        }

        .section {
            margin-bottom: 30px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

            .section h2 {
                margin-top: 0;
            }

        .highlight {
            background-color: #eaf2f8;
            padding: 10px;
            border-left: 5px solid #2980b9;
            margin-bottom: 15px;
            border-radius: 3px;
        }

        .footer {
            text-align: center;
            font-size: 12px;
            margin-top: 50px;
            border-top: 1px solid #ddd;
            padding-top: 10px;
        }

            .footer p {
                margin: 0;
            }

        .details {
            margin-bottom: 15px;
        }

            .details strong {
                display: inline-block;
                width: 150px;
            }

        .highlight p {
            margin: 5px 0;
        }
    </style>
    <div>
        @RenderBody()
    </div>
</body>
</html>
